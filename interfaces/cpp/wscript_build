# build libaubiocpp
libaubiocpp = bld.new_task_gen(
    features = 'cxx cshlib',
    includes = ['.', '../../src'],
    source = bld.path.ant_glob('*.cpp'),
    target = 'aubiocpp',
    uselib_local = ['aubio'],
    vnum = bld.env['LIB_VERSION'])

# install header
bld.install_files('${PREFIX}/include/aubio/', 'aubiocpp.h')
